<html>
  <head>
        <link rel="stylesheet" type="text/css" href="./style.css">
  </head>
  <body>

    <section class="header">
      <h1>The Digital Seamstress</h1>
      <br>
    </section>


    <section class="tabellenbereich">



     <table>
       <tr>
         <th>Schnittmuster</th>
         <th>Stoff</th>
         <th>Länge</th>
         <th>Aktion</th>
       </tr>

    <% @schnittmustersammlung.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.stoff %></td>
      <td><%= item.laenge %></td>
      <td><a href="/delete/<%= @schnittmustersammlung.index(item) %>">Löschen</a></td>
    </tr>

    <% end %>


     </table>

     <form action='/' method="POST">
       <input type="text" name="name">
       <input type="text" name="stoff">
       <input type="text" name="laenge">
       <button type="submit"> Add </button>
     </form>

</section>



<section heigth=100px>
<a href="/undo">Löschen rückgängig</a>
</section>



<form action='/selection' method="GET">

  <p>Stoffart<br>

    <%

    hash={}
    @schnittmustersammlung.each do |schnittmuster|
      hash[schnittmuster.stoff]=1
    end


    hash.keys.each do |stoff|
    %>

  <input type="radio" name="stoffselektion" value="<%= stoff %>" checked> <%= stoff %> <br>

  <% end %>



  </p>
<br>

  <p>Länge<br>
      <%
      hash={}
    @schnittmustersammlung.each do |schnittmuster|
      hash[schnittmuster.laenge]=1
    end

    hash.keys.each do |laenge|
    %>
    <input type="radio" name="laengenselektion" value="<%= laenge %>" checked> <%= laenge %> <br>

  <% end %>
  </p>





    <button type="submit"> Select </button>

</form>


  </body>
</html>
